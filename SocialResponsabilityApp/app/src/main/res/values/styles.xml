<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <!--EditText Style-->
    <style name="EditTextTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <!--TextInputLayout Text Appearance Style-->
    <style name="FloatingText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
